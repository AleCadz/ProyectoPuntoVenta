#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: hex('#c44536')
		Rectangle:
			size: self.size
			pos: self.pos
	BoxLayout:
		size_hint_y: .05
	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#edddd4')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y: .9
		Label:
			size_hint_x: .3
		BoxLayout:
			size_hint_x: .4
			spacing: 10
			orientation: 'vertical'
			Label: 
				size_hint_y: .15
				text: 'FerreApp'
				color: (0,0,0,1)
			Image:
    			source: 'signin\Logo.png'
    			size: self.texture_size

			Label:
				id: signin_notificacion
				size_hint_y: .1
				color: (1, .2, .2, 1)
			TextInput:
				id: username
				size_hint_y: .15
				hint_text: 'Nombre de Usuario'
				multiline: False
				write_tab: False
				on_text_validate: root.verificar_usuario(self.text, password.text)
			TextInput:
				id: password
				size_hint_y: .15
				hint_text: 'Contrase√±a'
				multiline: False
				write_tab: False
				password: True
				on_text_validate: root.verificar_usuario(username.text, self.text)
			Button:
				size_hint_y: .15
				background_normal: ''
				background_color: hex('#772E25')
				text: 'Ingresar'
				on_release: root.verificar_usuario(username.text, password.text)
			Button:
				size_hint_y: .15
				background_normal: ''
				background_color: hex('#772E25')
				text: 'Registrar'
				on_release: root.crear_usuario()
			Label:
				size_hint_y: .4
		Label:
			size_hint_x: .3
	BoxLayout:
		size_hint_y: .05


